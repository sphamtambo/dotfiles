## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (d), Dual, (m) Monitor, (l) Laptop
mode "$mode_display" {
	# dual screen
	bindsym d exec --no-startup-id xrandr --output eDP1 --brightness 0.8 --rate 60.00 --auto --output HDMI1 --auto --right-of eDP1 --brightness 0.8 --mode 1920x1080 , mode "default"
	# HMNI1 only
	bindsym m exec --no-startup-id xrandr --output eDP1 --off --output HDMI1 --auto --brightness 0.8 --rate 60.00 --mode 1920x1080 , mode "default"
	# eDP1 only (laptop)
	bindsym l exec --no-startup-id xrandr --output HDMI1 --off --output eDP1 --auto --brightness 0.8 --rate 60.00 --mode 1920x1080 , mode "default"


    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+s mode "$mode_display"

