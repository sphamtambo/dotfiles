general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 1
        color_good = '#2f343f'
		color_degraded = '#ebcb8b'
		color_bad = '#ba5e57'
}

order += "volume master"
order += "battery 0"
order += "wireless _first_"
order += "cpu_temperature 0"
order += "disk /"
order += "ethernet enp1s0"
order += "tztime local"

